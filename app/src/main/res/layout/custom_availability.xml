<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CustomDispo">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:gravity="left">

        <EditText
            android:id="@+id/edit_datePick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="75dp"
            android:inputType="date"
            android:padding="10dp"
            android:text="Date"
            android:onClick="showDatePicker" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="From"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

            <EditText
                android:id="@+id/edit_timePick1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:lineSpacingExtra="-10sp"
                android:text="time"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:onClick="showTimePicker" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

            <EditText
                android:id="@+id/edit_timePick2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:lineSpacingExtra="-10sp"
                android:text="time"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:onClick="showTimePicker" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration   "
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />

            <Spinner
                android:id="@+id/duration_drop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available"
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />

            <CheckBox
                android:id="@+id/checkBox_available"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3" />
        </TableRow>

        <ListView
            android:id="@+id/_ListViewCustomDispo"
            android:layout_width="match_parent"
            android:layout_height="268dp"
            android:layout_marginTop="10dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buttonConfirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Confirm"
                android:onClick="OnClickConfirm"/>
        </TableRow>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>