<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reg_layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterFinal"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollRegister"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.1">

            <LinearLayout
                android:id="@+id/reg_llv_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/reg_llh_fullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/reg_llv_firstName"
                        android:layout_width="197dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/txt_firstname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/reg_input_firstName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:contentDescription="First name"
                                android:ems="10"
                                android:hint="First name"
                                android:inputType="textPersonName" />

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/reg_llv_lastName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/txt_lastname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/reg_input_lastName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:contentDescription="Last name"
                                android:ems="10"
                                android:hint="Last name"
                                android:inputType="textPersonName" />
                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txt_email_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/reg_input_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="Email"
                        android:ems="10"
                        android:hint="E-mail address"
                        android:inputType="textEmailAddress" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txt_confirm_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/reg_input_emailConfirm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="Email confirmation"
                        android:ems="10"
                        android:hint="Confirm E-mail"
                        android:inputType="textEmailAddress" />
                </android.support.design.widget.TextInputLayout>


                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txt_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/reg_input_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="Password"
                        android:ems="10"
                        android:hint="Password"
                        android:inputType="textPassword" />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txt_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/reg_input_passwordConfirm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="Password confirmation"
                        android:ems="10"
                        android:hint="Confirm password"
                        android:inputType="textPassword" />

                </android.support.design.widget.TextInputLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/reg_txt_addressLbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address" />

                <LinearLayout
                    android:id="@+id/reg_llh_street"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/reg_llv_streetNumber"
                        android:layout_width="52dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/txt_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/reg_input_streetNumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:contentDescription="Street number"
                                android:ems="10"
                                android:hint="No."
                                android:inputType="number" />

                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/reg_llv_streetName"
                        android:layout_width="142dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/txt_streetname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/reg_input_streetName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:contentDescription="Street name"
                                android:ems="10"
                                android:hint="Street name"
                                android:inputType="textPersonName" />

                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/reg_llv_city"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/txt_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/reg_input_city"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:contentDescription="City"
                                android:ems="10"
                                android:hint="City"
                                android:inputType="textPersonName" />

                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/reg_llh_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/reg_llv_province"
                        android:layout_width="115dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/txt_province"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/reg_input_province"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:contentDescription="Province"
                                android:ems="10"
                                android:hint="Province"
                                android:inputType="textPersonName" />

                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/reg_llv_country"
                        android:layout_width="139dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/txt_country"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/reg_input_country"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:contentDescription="Country"
                                android:ems="10"
                                android:hint="Country"
                                android:inputType="textPersonName" />

                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/reg_llv_postalCode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/username_text_input_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/reg_input_postalCode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:contentDescription="Postal code"
                                android:ems="10"
                                android:hint="Postal Code"
                                android:inputType="textPostalAddress" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <LinearLayout
                    android:id="@+id/reg_llh_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/reg_txt_phoneLbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Phone number" />

                    <EditText
                        android:id="@+id/reg_input_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="1234567890"
                        android:inputType="phone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/reg_llh_accountType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/reg_txt_accountTypeLbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Create an account as:" />

                    <Spinner
                        android:id="@+id/reg_dd_accountType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <Button
                    android:id="@+id/reg_btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="onClickRegister"
                    android:text="Register" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>